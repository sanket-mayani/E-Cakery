<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="model.Product" table="product">
	
		<id name="pid" type="int" column="PID">
			<generator class="increment"></generator>
		</id>
			
		<property name="name">
			<column name="Product_Name"></column>
		</property>
		
		<property name="description">
			<column name="Description"></column>
		</property>	
		
		<property name="price">
			<column name="Price"></column>
		</property>		
		
		<property name="image">
			<column name="Image"></column>
		</property>	
		
		<property name="tier">
			<column name="Tier"></column>
		</property>	
		
		<property name="quantity">
			<column name="Quantity"></column>
		</property>	
		
		<set name="categories" table="ProductCategory" fetch="join" lazy="false">
			<key column="pid"></key>
			<many-to-many column="cid" class="model.Category"/>
		</set>
		
		<many-to-one name="flavour" class="model.Flavour" column="Flavour_Id" fetch="join" lazy="false"></many-to-one>
		<many-to-one name="seller" class="model.Seller" column="Seller_Id"></many-to-one>
		
		
	</class>
</hibernate-mapping>